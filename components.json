{
    "components": [
        {
            "sectionId": "Section 1",
            "componentName": "PropertyCarousel",
            "authorableFields": {
                "heading": {
                    "type": "Text",
                    "defaultValue": "Our properties"
                },
                "description": {
                    "type": "RTE",
                    "defaultValue": "Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Morbi elementum."
                },
                "properties": {
                    "type": "Multifield",
                    "fields": {
                        "image": {
                            "type": "Image",
                            "required": true
                        },
                        "propertyName": {
                            "type": "Text",
                            "required": true
                        },
                        "propertyLocation": {
                            "type": "Text",
                            "required": true
                        },
                        "propertyTags": {
                            "type": "Multifield",
                            "fields": {
                                "tag": {
                                    "type": "Text"
                                }
                            }
                        },
                        "enquireLink": {
                            "type": "Link",
                            "required": true
                        },
                        "viewLink": {
                            "type": "Link",
                            "required": true
                        }
                    },
                    "maxItems": 10
                },
                "ctaButton": {
                    "type": "Link",
                    "defaultText": "Button"
                }
            },
            "uiDescription": "A responsive property carousel showcasing property listings with images, location details, and action buttons. Features include:\n- Multiple property cards in a sliding carousel\n- Property tags for categorization\n- Enquire and View CTAs for each property\n- Navigation dots and arrows for carousel control\n- Responsive design adapting to different screen sizes",
            "businessRequirements": [
                "Touch-friendly carousel navigation",
                "Responsive image handling with proper aspect ratio",
                "Accessibility compliance for navigation",
                "Support for multiple property tags",
                "Link tracking for Enquire and View actions",
                "Lazy loading of images for performance",
                "Smooth sliding animations",
                "Support for keyboard navigation",
                "Screen reader compatibility"
            ],
            "componentType": "Custom Component",
            "accessibility": {
                "requirements": [
                    "ARIA labels for carousel controls",
                    "Keyboard navigation support",
                    "Focus management for interactive elements",
                    "Alt text for property images",
                    "Screen reader announcements for slide changes"
                ]
            },
            "styling": {
                "requirements": [
                    "Mint green background for property cards",
                    "Consistent spacing between elements",
                    "Hover states for interactive elements",
                    "Proper text hierarchy",
                    "Responsive layout breakpoints"
                ]
            }
        }
    ]
}
